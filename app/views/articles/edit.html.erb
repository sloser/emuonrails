<%= error_messages_for :article %>
<% form_for :article, :url => '/articles/update/' + @article.id.to_s do |f| -%>
<p><label for="article_title">Title</label><br/>
<%= f.text_field :title, :value => @article.title %></p>

<p><label for="caticle_categry_id">Category</label><br/>
<%= select ("article", "category_id", @categories.map {|c| [c.title,c.id]}) %></p>

<p><%= submit_tag 'Edit' %></p>
<% end -%>
